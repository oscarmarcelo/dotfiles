{
  "editor.fontFamily": "FiraCode-Retina, 'SF Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": "'ss01', 'ss06'",
  "editor.lineHeight": 23,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [
    80,
    120
  ],
  "editor.renderControlCharacters": true,
  "editor.stickyTabStops": true,
  "editor.tabSize": 2,
  "window.autoDetectColorScheme": true,
  "window.restoreWindows": "preserve",
  "workbench.colorTheme": "GitHub Sharp Dark",
  // "workbench.iconTheme": "vscode-icons",
  "workbench.preferredDarkColorTheme": "GitHub Sharp Dark",
  "workbench.preferredLightColorTheme": "GitHub Sharp",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.settings.editor": "json",
  "files.eol": "\n",
  "files.exclude": {
    "**/node_modules": true,
    "**/package-lock.json": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  // VSCode isn't letting EditorConfig override this setting. See: https://github.com/editorconfig/editorconfig-vscode/issues/153
  // "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "emmet.triggerExpansionOnTab": true,


  // ========================================================
  // Extensions
  // ========================================================

  "puglint.enable": true,
  "xo.enable": true,
  "todohighlight.include": [
    "**/*.html",
    "**/*.pug",
    "**/*.css",
    "**/*.sass",
    "**/*.scss",
    "**/*.js",
    "**/*.php"
  ],
  "todohighlight.keywords": [
    {
      "text": "TODO",
      "color": "#fff",
      "backgroundColor": "#ffbd2a",
      "overviewRulerColor": "#ffbd2acc"
    },
    {
      "text": "@todo",
      "color": "#fff",
      "backgroundColor": "#ffbd2a",
      "overviewRulerColor": "#ffbd2acc"
    },
    {
      "text": "FIXME",
      "color": "#fff",
      "backgroundColor": "#f06292",
      "overviewRulerColor": "#f06292cc"
    },
    {
      "text": "@fixme",
      "color": "#fff",
      "backgroundColor": "#f06292",
      "overviewRulerColor": "#f06292cc"
    },
    {
      "text": "DEPRECATED:",
      "color": "#fff",
      "backgroundColor": "#d54e53",
      "overviewRulerColor": "#d54e53cc"
    },
    {
      "text": "DEPRECATED",
      "color": "#fff",
      "backgroundColor": "#d54e53",
      "overviewRulerColor": "#d54e53cc"
    },
    {
      "text": "@deprecated",
      "color": "#fff",
      "backgroundColor": "#d54e53",
      "overviewRulerColor": "#d54e53cc"
    },
    {
      "text": "REVIEW:",
      "color": "#fff",
      "backgroundColor": "#e78c45",
      "overviewRulerColor": "#e78c45cc"
    },
    {
      "text": "REVIEW",
      "color": "#fff",
      "backgroundColor": "#e78c45",
      "overviewRulerColor": "#e78c45cc"
    },
    {
      "text": "@review",
      "color": "#fff",
      "backgroundColor": "#e78c45",
      "overviewRulerColor": "#e78c45cc"
    },
    {
      "text": "HACK:",
      "color": "#fff",
      "backgroundColor": "#c397d8",
      "overviewRulerColor": "#c397d8cc"
    },
    {
      "text": "HACK",
      "color": "#fff",
      "backgroundColor": "#c397d8",
      "overviewRulerColor": "#c397d8cc"
    },
    {
      "text": "@hack",
      "color": "#fff",
      "backgroundColor": "#c397d8",
      "overviewRulerColor": "#c397d8cc"
    }
  ]
}
