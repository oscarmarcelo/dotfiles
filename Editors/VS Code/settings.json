{
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.fontFamily": "'Fira Code', 'SF Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": "'cv02', 'cv05', 'cv32', 'ss01', 'ss06'",
  "editor.guides.bracketPairs": true,
  "editor.lineHeight": 23,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [
    80,
    120
  ],
  "editor.stickyTabStops": true,
  "editor.tabSize": 2,
  "workbench.colorTheme": "GitHub Light Default",
  "workbench.preferredDarkColorTheme": "GitHub Dark Dimmed",
  "workbench.preferredLightColorTheme": "GitHub Light Default",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "newUntitledFile",
  "window.autoDetectColorScheme": true,
  "window.restoreWindows": "preserve",
  "files.eol": "\n",
  "files.exclude": {
    "**/node_modules": true,
    "**/package-lock.json": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  // VSCode isn't letting EditorConfig override this setting. See: https://github.com/editorconfig/editorconfig-vscode/issues/153
  // "files.trimTrailingWhitespace": true,
  "javascript.updateImportsOnFileMove.enabled": "prompt",
  "terminal.integrated.enableBell": true,
  // Enable only when necessary to avoid increased memory consumption.
  // "terminal.integrated.scrollback": 20000,
  "terminal.integrated.tabs.enabled": false,
  "telemetry.telemetryLevel": "off",
  "emmet.triggerExpansionOnTab": true,
  "git.autofetch": true,
  "[javascript]": {
    "editor.defaultFormatter": "samverschueren.linter-xo"
  },


  // ========================================================
  // Extensions
  // ========================================================

  "puglint.enable": true,
  "xo.enable": true,
  "todohighlight.include": [
    "**/*.html",
    "**/*.pug",
    "**/*.css",
    "**/*.sass",
    "**/*.scss",
    "**/*.js",
    "**/*.php"
  ],
  "todohighlight.keywords": [
    {
      "text": "TODO",
      "color": "#fff",
      "backgroundColor": "#ffbd2a",
      "overviewRulerColor": "#ffbd2acc"
    },
    {
      "text": "@todo",
      "color": "#fff",
      "backgroundColor": "#ffbd2a",
      "overviewRulerColor": "#ffbd2acc"
    },
    {
      "text": "FIXME",
      "color": "#fff",
      "backgroundColor": "#f06292",
      "overviewRulerColor": "#f06292cc"
    },
    {
      "text": "@fixme",
      "color": "#fff",
      "backgroundColor": "#f06292",
      "overviewRulerColor": "#f06292cc"
    },
    {
      "text": "DEPRECATED",
      "color": "#fff",
      "backgroundColor": "#d54e53",
      "overviewRulerColor": "#d54e53cc"
    },
    {
      "text": "@deprecated",
      "color": "#fff",
      "backgroundColor": "#d54e53",
      "overviewRulerColor": "#d54e53cc"
    },
    {
      "text": "REVIEW",
      "color": "#fff",
      "backgroundColor": "#e78c45",
      "overviewRulerColor": "#e78c45cc"
    },
    {
      "text": "@review",
      "color": "#fff",
      "backgroundColor": "#e78c45",
      "overviewRulerColor": "#e78c45cc"
    },
    {
      "text": "HACK",
      "color": "#fff",
      "backgroundColor": "#c397d8",
      "overviewRulerColor": "#c397d8cc"
    },
    {
      "text": "@hack",
      "color": "#fff",
      "backgroundColor": "#c397d8",
      "overviewRulerColor": "#c397d8cc"
    }
  ]
}
